<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        x:Class="WoWmapperX.Overlay.OverlayWindow" 
        Title="WoWmapper Overlay"
        Width="640"
        Height="480"
        Background="Transparent"
        TransparencyLevelHint="Transparent"
        BorderThickness="0"
        CanResize="False"
        ShowInTaskbar="False"
        SystemDecorations="None"> 
    <Grid>
        <StackPanel Name="StackNotifications"
                    Width="400"
                    Margin="0,20"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Bottom"
                    IsHitTestVisible="False" />
        <Canvas Name="CanvasCrosshair" IsHitTestVisible="False">
            <Image Name="ImageCrosshair"
                   Width="64"
                   Height="64"
                   IsHitTestVisible="False"
                   Source="/Overlay/Images/Crosshair.png"
                   IsVisible="False" />
        </Canvas> 
    </Grid>
</Window>
